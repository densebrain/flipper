{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2015","es2016","es2017","esnext","dom", "webworker"
    ],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "preserveConstEnums": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "package-json": ["./package-json"],
      "rsocket-core": ["./rsocket-core"],
      "rsocket-types": ["./rsocket-types"],
      "rsocket-flowable": ["./rsocket-flowable"],
      "rsocket-tcp-server": ["./rsocket-tcp-server"],
      "rsocket-tcp-client": ["./rsocket-tcp-server"]
    },
    "typeRoots": [
      "./","../node_modules/@types"
    ]
  },
  
  "exclude": [
    "node_modules/**/*.*",
    "**/node_modules/**/*.*",
    "node_modules"
    //    "**/*.js",
    //    "**/*.js.flow",
    //    "src/**/*.ts",
    //    "src/**/*.tsx",
    //    "static/*.ts",
    //    "static/*.tsx"
  ]
  
}
