    "fileAssociations": [
      {
        "ext": [
          ".flipper"
        ],
        "name": "Flipper Data",
        "role": "Viewer",
        "icon": "document-icons/document.icns"
      }
    ]
  },
  "dependencies": {
    "@flipper/common": "^1.0.0",
    "mz": "^2.7.0",
    "ts-optchain": "^0.1.6",
    "typeguard": "^0.0.13"
  },
  "devDependencies": {
    "@flipper/dev": "^1.0.0",
    "electron": "^5.0.1"
  },
  "resolutions": {
    "metro/temp": "0.9.0"
  }
}
