{
  "name": "@flipper/app",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "build": {
    "appId": "flipper",
    "productName": "Flipper",
    "artifactName": "Flipper-${os}.${ext}",
    "mac": {
      "category": "public.app-category.developer-tools",
      "extendInfo": {
        "NSUserNotificationAlertStyle": "alert"
      }
    },
    "win": {
      "publisherName": "Facebook, Inc."
