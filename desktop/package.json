{
  "name": "@states/desktop",
  "private": true,
  "version": "1.0.0",
  "description": "Development Platform",
  "productName": "States",
  "author": "Facebook Inc",
  "icon": "icon.png",
  "category": "facebook-intern",
  "privileged": true,
  "workspaces": [
    "packages/*"
  ],
  
  "resolutions": {
    "@jest-runner/electron/electron": "5.0.2"
  },
  
  "devDependencies": {
    "typescript": "^3.5.0-rc"
  },
  
  "scripts": {
    "clean": "find packages -name tsconfig.tsbuildinfo | xargs rm && find packages -name lib | grep -v node_modules | xargs rm -Rf && find packages -name dist | grep -v node_modules | xargs rm -Rf",
    "clean:all": "find . -name node_modules | xargs rm -Rf && yarn run clean && yarn run bootstrap",
    
    "bootstrap": "lerna bootstrap",
    "preinstall": "yarn config set ignore-engines",
    "start": "cd packages/dev && yarn run start",
    "test": "cd packages/dev && yarn run test",
    "package": "yarn run clean:all && cd packages/dev && yarn run package",
    "start:clean": "yarn run clean && yarn run start",
    
    "old:fix": "eslint . --fix",
    
    "old:test": "jest --testPathPattern=node\\.js$ --no-cache",
    "old:test:debug": "node --inspect node_modules/.bin/jest --runInBand",
    "old:test:electron": "jest --testPathPattern=electron\\.js$ --testEnvironment=@jest-runner/electron/environment --runner=@jest-runner/electron --no-cache",
    "old:test:device": "USE_ELECTRON_STUBS=1 jest --testPathPattern=device\\.js$ --detectOpenHandles --forceExit --no-cache",
    "old:lint": "eslint . && flow check"
  },
  "optionalDependencies": {
    "7zip-bin-mac": "^1.0.1"
  }
}
